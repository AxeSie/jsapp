{
  "name": "isrtooling",
  "productName": "ISR Tool",
  "version": "0.1.1-alpha",
  "description": "first blood",
  "main": "main.js",
  "scripts": {
    "start": "electron . --trace-warnings",
    "build": "electron-builder build --win --publish=never",
    "release":"electron-builder build --win --publish=always",
    "postinstall":"electron-builder install-app-dps"
  },
  "build": {
    "appId": "jsapp",
    "files": [
      "**/*",
      "!.gitignore",
      "!.jsdsekapp.code-workspace",
      "!**/dev/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "ISRTooling-Uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": "de_DE",
      "installerSidebar":"main-logo.bmp",
      "menuCategory": "DasKartell",
      "shortcutName":"ISR Tooling"
    }
  },
  "publish": {
    "provider":"github",
    "repo":"jsapp",
    "owner":"AxeSie",
    "releaseType":"release"
  },
  "author": "RudiRuder",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "bufferutil": "^4.0.8",
    "clipboard-event": "^1.6.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.1",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "node-window-manager": "^2.2.4",
    "sharp": "^0.33.2",
    "tail": "^2.2.6",
    "utf-8-validate": "^6.0.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.2.4",
    "electron-builder": "^24.13.3"
  }
}
